{{#hascategorymenus}}

    <div class="dropdown tcdd-category-menu inline-block">
        <button 
            class="btn btn-primary dropdown-toggle" 
            type="button" 
            id="tcddCategoryMenu" 
            data-toggle="dropdown" 
            aria-haspopup="true" 
            aria-expanded="false"
        >
            {{# str }} trainingcategories, theme_tcdd_learn {{/ str }}
        </button>

        <div class="dropdown-menu-triangle"></div>

        <div class="dropdown-menu" aria-labelledby="tcddCategoryMenu">
            <div class="flex">
                <div class="w-1/3">

                    {{#categorymenus}}

                        {{#hascategory}}

                            {{{ button }}}

                        {{/hascategory}}

                    {{/categorymenus}}   

                </div>

                <div class="w-2/3 tabs-menu">
                    {{#hassubcategory1}}
                        <p class="font-bold">{{# str }} subcategories, theme_tcdd_learn {{/ str }}</p>
                        <div id="menuItem-1" style="display: block;">
                            <ul class="list-reset">
                                {{#subcategory1items}}
                                    {{#hassubcategoryitem}}
                                        <li>
                                            <a href="{{{ url }}}">{{{ subtitle }}}</a>
                                        </li>
                                    {{/hassubcategoryitem}}
                                {{/subcategory1items}}
                            </ul>
                        </div>
                    {{/hassubcategory1}}

                    {{#hassubcategory2}}
                        <div id="menuItem-2" style="display: none;">
                            <ul class="list-reset">
                                {{#subcategory2items}}
                                    {{#hassubcategoryitem}}
